{
  "mcpServers": {
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "./inventory.db"
      ],
      "description": "SQLite database server for inventory.db"
    },
    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis",
        "redis://localhost:6380"
      ],
      "env": {
        "REDIS_URL": "redis://localhost:6380"
      },
      "description": "Redis server for inventory stock management"
    }
  }
}

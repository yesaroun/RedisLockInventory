REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redlock Configuration (분산 락)
# Docker Compose 사용 시 (컨테이너 이름 + 내부 포트):
REDIS_NODES=redis:6379,redis1:6379,redis2:6379,redis3:6379,redis4:6379

# 로컬 pytest 테스트 시 (호스트 포트포워딩):
# REDIS_HOST=localhost
# REDIS_PORT=6380
# REDIS_NODES=localhost:6380,localhost:6381,localhost:6382,localhost:6383,localhost:6384

# Redlock 모드 활성화 (true/false)
USE_REDLOCK=false

# JWT Configuration
JWT_SECRET_KEY=secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./inventory.db

# Lock Configuration
LOCK_TIMEOUT_SECONDS=10
LOCK_RETRY_ATTEMPTS=3
LOCK_RETRY_DELAY_MS=100

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
